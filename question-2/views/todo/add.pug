extends ../layout

block content 
  h1 Add New TODO
  form(action='/todo/add',method='post')
    .form-group 
      label(for="name") Todo Name 
      input#name(type='text',class='form-control', name='name')
    .form-group  
      label(for="content") Todo Content 
      input#content(type='text',class='form-control', name='content')
    .form-group  
      label(for="status") Todo Status 
      input#status(type='text',class='form-control', name='status')
    input(type="submit",class="btn btn-info")  